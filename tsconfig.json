{
    "compilerOptions": {
      "target": "es2016",
      "allowJs": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "sourceMap": true,
      "baseUrl": "src",
      "rootDir": "src",
      "declaration": true,
      "paths": {
        "*": ["./*"],
      }
    },
    "include": ["src"]
  }